<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_marginBottom="@dimen/_20sdp"
        android:fillViewport="true"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/header">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@color/grey_300"
                android:gravity="center"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:text="Fill the form and register your complaint"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Product"
                    android:textColor="@color/red_900"
                    android:textSize="@dimen/_12sdp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangle_blue">

                    <Spinner
                        android:id="@+id/spProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_arrow1"
                        android:background="@null"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:scrollbars="none" />

                    <ImageView
                        android:id="@+id/iv_arrow1"
                        android:layout_width="@dimen/_11sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:src="@mipmap/down" />
                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:textStyle="bold"
                android:background="@color/grey_300"
                android:gravity="center"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:text="Common Complaints "
                android:textColor="@color/red_900"
                android:textSize="@dimen/_12sdp" />
            <LinearLayout
                android:id="@+id/llContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/rectangle_blue">
                <EditText
                    android:id="@+id/et_feedback"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:background="@null"
                    android:lineSpacingExtra="@dimen/_3sdp"
                    android:gravity="top|left"
                    android:textColorHint="@color/black_trans"
                    android:textColor="@color/black"
                    android:hint="Description if any..."
                    android:textSize="@dimen/_12sdp"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/imageView"
                    android:layout_alignEnd="@+id/imageView" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Date"
                    android:textColor="@color/red_900"
                    android:textSize="@dimen/_12sdp" />

                <RelativeLayout
                    android:id="@+id/rrDate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangle_blue">

                    <TextView

                        android:textSize="@dimen/_12sdp"
                         android:textColor="@color/black"
                        android:id="@+id/tvDate"
                        android:layout_width="match_parent"
                        android:drawableRight="@drawable/ic_baseline_date_range_24"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Select Date"
                        android:background="@null"
                        android:paddingLeft="@dimen/_7sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:scrollbars="none" />


                </RelativeLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Time Slot"
                    android:textColor="@color/red_900"
                    android:textSize="@dimen/_12sdp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangle_blue">

                    <Spinner
                        android:id="@+id/spTimeSlot"
                        android:entries="@array/time_slot"
                        android:layout_width="wrap_content"
                        android:drawableRight="@drawable/ic_baseline_access_time_24"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:scrollbars="none" />
                    <ImageView
                        android:layout_width="@dimen/_11sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:src="@mipmap/down" />

                </RelativeLayout>


            </LinearLayout>

            <Button


                android:text="SUBMIT "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnSubmit"
                android:layout_margin="@dimen/_20sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                android:background="@drawable/gradient"/>

        </LinearLayout>

    </ScrollView>







</LinearLayout>