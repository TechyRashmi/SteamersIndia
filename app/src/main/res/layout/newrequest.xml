<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/llmain"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvComplaintid"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_baseline_confirmation_number_24"
                        android:textStyle="bold"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        android:text="Complaint no :98888282828"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvName"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_baseline_verified_user_24"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        android:text="Rashmi Dwivedi"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvAddress"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_baseline_location_on_24"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        android:text="Aundh,411007"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvProductname"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_baseline_category_24"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        android:text="Product Name : Bath tub"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvDate"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        android:text="22-dec-2010 (between 2pm to 4pm)"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvAllotedtime"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="right"
                    android:drawablePadding="@dimen/_5sdp"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/black_trans"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
