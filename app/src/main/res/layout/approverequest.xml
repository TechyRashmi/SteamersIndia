<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:visibility="gone"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/black_trans"
        android:textSize="@dimen/_16sdp"
        android:layout_centerInParent="true"
        android:text="Complaint Details:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"   />                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   t_height="wrap_content"/>

    <View
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_gravity="center"
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvAlertMsg"
        android:background="@color/grey_500" />

    <com.google.android.material.card.MaterialCardView
        android:layout_margin="@dimen/_20sdp"
        app:cardElevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp">


        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tvComplaintid"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_baseline_confirmation_number_24"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/black_trans"

                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


   <com.google.android.material.card.MaterialCardView
       app:cardBackgroundColor="@color/white"
           android:background="@drawable/selector"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"

         app:cardElevation="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:backgroundTint="@color/white"
               android:textStyle="bold"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="@dimen/_10sdp"
               android:elevation="@dimen/_10sdp"
               android:text="Technician Details"
               android:textColor="@color/red_900"
               android:textSize="@dimen/_16sdp" />
    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp">
        
        <LinearLayout
            android:layout_weight=".7"
            android:layout_width="0dp"
            android:layout_height="match_parent">



            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/profile"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_weight="1.3"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvName"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/black"

                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvDesignation"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/black"
                android:text="Designation: Technician"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvContact"
                android:maxLength="19"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/black"

                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        
    </LinearLayout>




       </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimated Amount *"
            android:textColor="@color/red_900"
            android:textSize="@dimen/_12sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/rectangle_blue">

            <TextView
                android:id="@+id/tvAmount"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_arrow1"
                android:background="@null"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                />


        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="vertical">

        <TextView

            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mention required material here..."
            android:textColor="@color/red_900"
            android:textSize="@dimen/_12sdp" />

        <RelativeLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_new">
            <EditText
                android:id="@+id/etMaterial"

                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:inputType="textMultiLine|textNoSuggestions"
                android:background="@null"
                android:lineSpacingExtra="@dimen/_3sdp"
                android:gravity="top|left"
                android:textColorHint="@color/black_trans"
                android:textColor="@color/black"
                android:hint="Material required..."
                android:textSize="@dimen/_12sdp"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/imageView"
                android:layout_alignEnd="@+id/imageView" />

        </RelativeLayout>


    </LinearLayout>
    <Button
        android:visibility="gone"
        android:text="Approve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSubmit"
        android:layout_margin="@dimen/_20sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        android:background="@color/green_600"/>



    <TextView
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/green_600"
        android:text="APPROVED"
        android:textSize="@dimen/_14sdp"
        android:layout_margin="@dimen/_20sdp"
        android:id="@+id/tvAccepted"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"/>
    <TextView
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Note: This is estimated price only actual price can differ from estimated price."
        android:textColor="@color/red_900"
        android:textSize="@dimen/_10sdp" />




</LinearLayout>
